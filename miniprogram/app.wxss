/*页面四边样式*/
.page {
  margin: 0rpx 10rpx 0rpx 10rpx;
}

/*banner图标设置充满容器*/
.pic {
  width: 100%;
  height: 100%;
}

/*下部外周样式*/
.body {
  margin: 50rpx 10rpx 0rpx 10rpx;
  display: flex;
  flex-direction: row;
}

/*左右容器大小*/
.body view {
  width: 300rpx;
  height: 800rpx;
  align-items: center;
}

/*左侧容器*/
.left {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/*子容器大小*/
.left view {
  width: 200rpx;
  height: 200rpx;
}

/*设置图文比例3：1*/
.l1 {
  flex: 3;
}

.l2 {
  flex: 1;
}

.l3 {
  flex: 3;
}

.l4 {
  flex: 1;
}

.l5 {
  flex: 3;
}

.l6 {
  flex: 1;
}

.right {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.right view {
  width: 200rpx;
  height: 200rpx;
}

/*图标大小样式*/
.pic1 {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 1px solid black;
}

.foot {
  background-color: lightgrey;
  text-align: center;
}