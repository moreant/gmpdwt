<view class="head">
  <button class="btn" type="primary" bindtap="run">{{ running ? "暂停记录" : "开始记录" }}</button>
  <button class="btn" type="primary" bindtap="clear">清除数据</button>
</view>
<view class="counter">
  <text space="nbsp">里程数:{{ util.toKM(meters) }}km 时间:{{ util.formatHour(second) }}</text>
</view>

<wxs module="util">
  function formatHour(second){ return Math.floor(second/3600)+":"+Math.floor((second %
  3600)/60)+":"+(second % 60) } function toKM(meter){ return (meter/1000).toFixed(2) }
  module.exports = { formatHour : formatHour, toKM:toKM }
</wxs>
<map
  class="mapView"
  latitude="{{ latitude }}"
  longitude="{{ longitude }}"
  markers="{{ markers }}"
></map>
