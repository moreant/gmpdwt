<view class="head">
  <button class="weui-btn weui-btn_mini weui-btn_primary left" bindtap="run">{{ running ? "暂停记录" : "开始记录" }}</button>
  <button class="weui-btn weui-btn_mini weui-btn_primary left" bindtap="saveRun">保存</button>
  <button class="weui-btn weui-btn_mini weui-btn_primary left" bindtap="reRun">回放</button>
  <button class="weui-btn weui-btn_mini weui-btn_warn left" bindtap="clear">清除数据</button>
</view>

<view class="counter">
  <view>里程数:{{ util.toKM(meters) }}km</view>
  <view>时间:{{ util.formatHour(second) }}</view>
</view>

<wxs module="util">
  function formatHour(second){ return Math.floor(second/3600)+":"+Math.floor((second %
  3600)/60)+":"+(second % 60) } function toKM(meter){ return (meter/1000).toFixed(2) }
  module.exports = { formatHour : formatHour, toKM:toKM }
</wxs>
<map
  class="mapView"
  latitude="{{ latitude }}"
  longitude="{{ longitude }}"
  markers="{{ markers }}"
  polyline="{{ polyline }}"
></map>
