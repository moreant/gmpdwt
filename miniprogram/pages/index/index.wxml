<van-search value="{{ value }}" input-align="center" placeholder="请输入城市" bind:search="search" />

<view class="weather">
  <view class="date">
    <text>{{data[0].date || '加载中' }} - {{data[0].week || '加载中'}}</text>
  </view>
  <view class="city">
    <text>{{city}}</text>
  </view>
  <view>
    <text class="tem">{{data[0].tem || '加载中'}}</text>
  </view>
  <view class="wea">
    <image class="weaimg" src="/images/{{data[0].wea_img || 'qing'}}.png" style />
    <view class="weabod">
      <view>{{data[0].wea || '加载中'}}</view>
      <view class="win-air">
        <text>{{data[0].win[0] || '加载中'}} {{data[0].win_speed || '加载中'}}</text>
      </view>
      <view>空气{{data[0].air_level || '加载中'}} 空气质量{{data[0].air || '加载中'}}</view>
    </view>
  </view>
  <view class="air_tips">
    <text>{{data[0].air_tips || '加载中'}}</text>
  </view>
</view>
<view class="list">
  <van-cell
    wx:for="{{data || '加载中'}}"
    wx:key="day"
    title="{{item.day || '加载中'}}"
    value="{{item.tem1 || '加载中'}} / {{item.tem2 || '加载中'}}"
    size="large"
    label="{{item.wea || '加载中'}}"
    is-link
  />
  <view class="footer">数据来自天气API www.tianqiapi.com</view>
</view>
