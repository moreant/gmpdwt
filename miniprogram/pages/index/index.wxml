<swiper bindchange="schange" current="{{ index }}" circular="true">
  <swiper-item
    wx:for="{{ candidateList }}"
    wx:key="_id"
    bind:tap="tap"
    bind:longpress="long"
    data-fileid="{{ item.fileID }}"
    data-index="{{ index }}"
  >
    <image mode="widthFix" src="{{ item.fileID }}" class="{{ item.class }}"></image>
  </swiper-item>
</swiper>
